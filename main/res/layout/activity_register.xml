<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Register">

    <ImageView
        android:id="@+id/eBackImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mcbackground" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mechanic_connect_logo" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Member Register"
        android:textColor="@color/green_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/memberTextR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:minHeight="48sp"
        android:onClick="gotoLoginPage"
        android:paddingTop="20dp"
        android:text="@string/sign_in"
        android:textColor="@color/green_700"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/usernameR"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Username/Business Name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColorHint="#E3E3E3"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/memberTextR"
        app:layout_constraintTop_toBottomOf="@+id/memberTextR" />

    <EditText
        android:id="@+id/passwordR"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#E3E3E3"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/usernameR"
        app:layout_constraintTop_toBottomOf="@+id/usernameR" />

    <EditText
        android:id="@+id/passwordR2"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#E3E3E3"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/passwordR"
        app:layout_constraintTop_toBottomOf="@+id/passwordR" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green_700"
        android:onClick="register"
        android:text="Register"
        app:layout_constraintStart_toStartOf="@+id/passwordR2"
        app:layout_constraintTop_toBottomOf="@+id/passwordR2" />

    <CheckBox
        android:id="@+id/isMachanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a Machanic"
        android:textColor="@color/green_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/passwordR2"
        app:layout_constraintTop_toTopOf="@+id/loginButton" />

    <ImageView
        android:id="@+id/imageReg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:srcCompat="@drawable/register_icon"
        app:tint="#AAAAAA" />
</androidx.constraintlayout.widget.ConstraintLayout>