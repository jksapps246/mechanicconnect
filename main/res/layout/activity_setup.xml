<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424141"
    tools:context=".Setup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mcbackground"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setupTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup"
                android:textColor="#E3DEDE"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AccountDetailsTxt"
                    android:layout_width="307dp"
                    android:layout_height="match_parent"
                    android:text="Account Details"
                    android:textColor="#FFE3DEDE"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/editADTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="editAccountDetails"
                    android:text="(Edit)"
                    android:textColor="#FFE3DEDE"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="First Name:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Last Name:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Email:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textWebEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView5"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Address 1:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Street Address"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView6"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Address 2:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apt, Suite, Unit, Building"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView7"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="City:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView9"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Postal Code:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Phone:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <Button
                android:id="@+id/saveBtnA"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="saveAccountDetails"
                android:text="Save" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PaymentDetailsTxt"
                    android:layout_width="307dp"
                    android:layout_height="30dp"
                    android:text="Payment Details"
                    android:textColor="#FFE3DEDE"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/editPDTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="editPaymentDetails"
                    android:text="(Edit)"
                    android:textColor="#FFE3DEDE"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/sameTxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:onClick="copyAddress"
                android:paddingLeft="30dp"
                android:text="Copy Personal Address > "
                android:textColor="#FFE3DEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Address 1:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editBAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Street Address"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Address 2:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editBAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apt, Suite, Unit, Building"
                    android:inputType="textPersonName"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="City:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editBCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView14"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Postal Code:"
                    android:textColor="#FFE3DEDE"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editBPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Postal Code"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:inputType="textPersonName"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="Card Details"
                android:textColor="#FFE3DEDE"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_width="216dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/visa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView15"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textColor="#FFE3DEDE"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name On Card"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:inputType="textPersonName"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView17"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Card #:"
                    android:textSize="16sp"
                    android:textColor="#FFE3DEDE"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Card Number"
                    android:inputType="textPersonName"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView18"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="Date:"
                    android:textSize="16sp"
                    android:textColor="#FFE3DEDE"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editExpirationDate"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint=" MM/YY"
                    android:inputType="textPersonName"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TextView19"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:minHeight="48dp"
                    android:text="Code:"
                    android:textSize="16sp"
                    android:textColor="#FFE3DEDE"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Code"
                    android:inputType="phone"
                    android:textColor="#FFE3DEDE"
                    android:textColorHint="#B3B3B3"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/saveBtnP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="savePaymentDetails"
                android:text="Save" />

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="continueOn"
                android:text="Continue"
                tools:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>